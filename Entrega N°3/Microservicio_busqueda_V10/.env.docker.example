# ============================================
# MONGODB (Puerto compartido: 5173)
# ============================================
MONGODB_URI=mongodb://search_user:search_pass@db_mongodb:5173/searchdb?authSource=searchdb
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=rootpass

# ============================================
# SERVIDOR (Backend Grupo 3: 5610)
# ============================================
NODE_ENV=production
PORT=5610

# ============================================
# CORS - Frontend Grupo 3 (Puerto 5620)
# ============================================
FRONTEND_ORIGIN=http://localhost:5620 

# ============================================
# INTEGRACIÓN CON MICROSERVICIOS
# ============================================
PRODUCTS_API_URL=http://localhost:4040/api
PRODUCTS_API_TOKEN=

# ============================================
# JWT (AUTENTICACIÓN)
# ============================================
JWT_SECRET=CAMBIAR_EN_PRODUCCION_usar_clave_aleatoria_64_caracteres
JWT_EXPIRATION=7d

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING Y SEGURIDAD
# ============================================
ENABLE_SECURITY_LOGS=true
LOG_LEVEL=warn

# ============================================
# OPTIMIZACIÓN DE IMÁGENES
# ============================================
IMAGE_CACHE_ENABLED=true
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=800
IMAGE_MAX_HEIGHT=800