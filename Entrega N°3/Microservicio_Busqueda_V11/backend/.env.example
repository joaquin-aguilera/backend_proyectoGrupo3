# ============================================
# MONGODB (Puerto compartido: 5173)
# ============================================
MONGODB_URI=mongodb://search_user:search_pass@localhost:5173/searchdb?authSource=searchdb
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=rootpass

# ============================================
# SERVIDOR (Backend Grupo 3: 5610)
# ============================================
PORT=5610
NODE_ENV=development

# ============================================
# CORS - Origen del Frontend (Puerto cambiado a 5620)
# ============================================
FRONTEND_ORIGIN=http://localhost:5620  

# ============================================
# INTEGRACIÓN API DE PRODUCTOS (Grupo 2)
# ============================================
PRODUCTS_API_URL=http://localhost:4040/api
PRODUCTS_API_TOKEN=

# ============================================
# JWT (AUTENTICACIÓN)
# ============================================
JWT_SECRET=clave_temporal_cambiar_produccion
JWT_EXPIRATION=7d

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING Y SEGURIDAD
# ============================================
ENABLE_SECURITY_LOGS=true
LOG_LEVEL=info

# ============================================
# OPTIMIZACIÓN DE IMÁGENES
# ============================================
IMAGE_CACHE_ENABLED=true
IMAGE_QUALITY=80